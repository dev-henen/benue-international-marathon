		    function disableRegistration () {
			  const parentElement = document.getElementById('registrationFrom');
			  if (parentElement) {
				const interactiveElements = parentElement.querySelectorAll('input, button, select');
				interactiveElements.forEach((element) => {
				  element.disabled = true;
