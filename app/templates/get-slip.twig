{% extends "base.twig" %}

{% block title %}
	Get my slip
{% endblock %}

{% block content %}
	<div class="hero">
		<div class="content h-full flex flex-col">
			<h1 class="text-3xl font-bold text-left mt-20 text-light">
				Get your registration slip
			</h1>
		</div>
	</div>

	<div class="content mb-10">
		<p class="text-lg mb-8 leading-8">
			Please follow the instructions below to get your registration slip.
		</p>

		<div class="flex flex-col md:flex-row gap-8">
			<div class="flex flex-col gap-8 w-full md:w-1/2">
				<div class="flex flex-col gap-4">
					<h2 class="text-2xl font-bold text-left mb-4">
						Step 1: Check your email
					</h2>
					<p class="text-lg leading-8">
						You should have received an email from us with a link to download your registration slip. If you haven't received it, please check your spam folder or use the form below.
					</p>
				</div>

				<div class="flex flex-col gap-4">
					<h2 class="text-2xl font-bold text-left mb-4">
						Step 2: Download your registration slip
					</h2>
					<p class="text-lg leading-8">
						Click on the link in the email to download your registration slip.
					</p>
				</div>

				<div class="flex flex-col gap-4">
					<h2 class="text-2xl font-bold text-left mb-4">
						Step 3: Print your registration slip
					</h2>
					<p class="text-lg leading-8">
						Once you have downloaded your registration slip, print it out and bring it with you to the event.
					</p>
				</div>
			</div>
		</div>

		<div class="max-w-md mt-10" ng-app="getSlipApp" ng-controller="SlipController">
			<div class="flex flex-col gap-4 mb-10">
				<h2 class="text-2xl font-bold text-left mb-4">
					Didn't receive an email?
				</h2>
				<p class="text-lg leading-8">
					No problem! Enter your email address below and we'll send you a new link.
				</p>
			</div>

		    <div class="text-red-500 text-sm mt-1" ng-if="emailError">[[emailError]]</div>
			<label class="label">Enter your email address:</label>
			<input type="text" ng-model="email" class="input" placeholder="Enter your email"/>
			<button ng-click="getSlip()" class="button mt-5">Get link</button>
		</div>

	</div>

	 <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.8.3/angular.min.js" integrity="sha512-KZmyTq3PLx9EZl0RHShHQuXtrvdJ+m35tuOiwlcZfs/rE7NZv29ygNA8SFCkMXTnYZQK2OX0Gm2qKGfvWEtRXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	 <script src="/js/get-slip.js"></script>
{% endblock %}
